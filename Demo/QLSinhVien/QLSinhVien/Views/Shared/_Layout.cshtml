@{
    var nguoidung = new Ql_SinhVienEntities().nguoidungs.FirstOrDefault(x => x.tendangnhap == User.Identity.Name);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/select2/select2.min.css" rel="stylesheet" />
    <link href="~/lib/select2/select2-boostrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- Header -->
    <header>
        <div style="background-color: #48ad50; color: #FFF">
            <div class="container py-2">
                <div class="row">
                    <div class="col">
                        <h3 class="m-0">Trang Thông Tin - Trường Cao Đẳng Công Nghệ Thông Tin</h3>
                    </div>
                    <div style="padding-right: 15px;">
                        <ul style="padding: 0; list-style: none">
                            <li style="display: inline-block">
                                <a href="#" style="color: #FFF">@(nguoidung.lahocsinh ? "Sinh viên" : "Giảng viên"): <strong>@nguoidung.hoten</strong></a>
                            </li>
                            <li style="display: inline-block">
                                <a href="@Url.Action("DangXuat", "TaiKhoan")" class="btn" style="color: #000000; border-radius: 5px; border: 1px solid #808080; background: #FFF; padding: 1px 8px;">Đăng xuất</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg py-0 m-0 border-bottom">
            <div class="container">
                <div class="collapse navbar-collapse p-0" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item border-left">
                            <a class="nav-link" href="@Url.Action("CuaToi", "TaiKhoan")">
                                <div class="text-center mb-1" style="font-size: 1.5rem">
                                    <span class="glyphicon glyphicon-user"></span>
                                </div>
                                <div class="text-center">
                                    Trang Cá Nhân
                                </div>
                            </a>
                        </li>
                        @if (nguoidung.lahocsinh)
                        {
                            <li class="nav-item border-left">
                                <a class="nav-link" href="@Url.Action("CuaToi", "HoatDong")">
                                    <div class="text-center mb-1" style="font-size: 1.5rem">
                                        <span class="glyphicon glyphicon-check"></span>
                                    </div>
                                    <div class="text-center">
                                        Hoạt động của tôi
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item border-left">
                                <a class="nav-link" href="@Url.Action("DangKy", "HoatDong")">
                                    <div class="text-center mb-1" style="font-size: 1.5rem">
                                        <span class="glyphicon glyphicon-copy"></span>
                                    </div>
                                    <div class="text-center">
                                        Đăng ký hoạt động
                                    </div>
                                </a>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item border-left">
                                <a class="nav-link" href="@Url.Action("Index", "HoatDong")">
                                    <div class="text-center mb-1" style="font-size: 1.5rem">
                                        <span class="glyphicon glyphicon-tasks"></span>
                                    </div>
                                    <div class="text-center">
                                        Danh sách hoạt động
                                    </div>
                                </a>
                            </li>
                            <li class="nav-item border-left">
                                <a class="nav-link" href="@Url.Action("Index", "TaiKhoan")">
                                    <div class="text-center mb-1" style="font-size: 1.5rem">
                                        <span class="glyphicon glyphicon-user"></span>
                                    </div>
                                    <div class="text-center">
                                        Danh sách tài khoản
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Content -->
    <section class="bg-light py-5">
        <div class="container">
            @RenderBody()
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
